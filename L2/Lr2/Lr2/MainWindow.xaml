<Window x:Class="Lr2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lr2"
        mc:Ignorable="d"
        Title="MainWindow" Height="189" Width="432">
    <DockPanel VerticalAlignment="Center">
        <Label Content="Label" Width="38" DockPanel.Dock="Top"/>
        <TextBox TextWrapping="Wrap" Text="TextBox" Background="White" Width="170" Height="150"/>
        <TextBox TextWrapping="Wrap" Text="TextBox" Background="White" DockPanel.Dock="Right" Width="170" Height="150"/>
        <Button Content="Button" Width="40" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="0,0,0,20">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Button.Resources>
        </Button>
    </DockPanel>
</Window>
