<Window x:Class="Lr2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lr2"
        mc:Ignorable="d"
        Title="MainWindow" Height="189" Width="432">
    <Canvas Background="#FF5BDDFF">
        <Label Content="Label" Canvas.Left="24" Canvas.Top="10"/>
        <TextBox Text="text" Canvas.Left="43" Canvas.Top="31" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="button" Canvas.Left="60" Canvas.Top="48" RenderTransformOrigin="-0.05,0.553" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Button.Resources>
        </Button>
    </Canvas>
</Window>
